// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Pattern Viewer(watch)",
      "path": "./packages/pattern-viewer/package.json",
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        "$ts-webpack-watch",
        "$tslint-webpack-watch"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build",
      "dependsOn": [
        "Deploy Pattern Viewer Wasm",
      ],
      "dependsOrder": "sequence",
    },
    {
      "label": "Deploy Pattern Viewer Wasm",
      "type": "shell",
      "command": "make",
      "args": [
        "pattern-viewer-wasm",
      ],
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "Test Pattern Viewer(watch)",
      "path": "./packages/pattern-viewer/package.json",
      "type": "npm",
      "script": "test-watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build",
      "dependsOn": [
        "Deploy Pattern Viewer Wasm",
      ],
      "dependsOrder": "sequence",
    },
  ]
}
